<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cykj.mapper.CityMapper">

    <insert id="addCity" parameterType="City">
    insert into t_city(cityId,cityName,cityCode,updateTime)value(#{cityId},#{cityName},#{cityCode},#{updateTime})
  </insert>

    <delete id="deleteCity" parameterType="java.lang.Integer">
    delete from t_city where cityId = #{cityId}
  </delete>

    <update id="updateCity" parameterType="City">
        update t_city set cityName=#{cityName},cityCode=#{cityCode},updateTime=sysdate()
        where cityId = #{cityId}
    </update>

    <select id="selectCities" resultType="City" parameterType="HashMap">
        select * from t_city
        <where>
            <if test="cityName != null and cityName !=''">
                and cityName like CONCAT('%',#{cityName},'%')
            </if>
            <if test="cityCode != null and cityCode !=''">
                and cityCode like CONCAT('%',#{cityCode},'%')
            </if>
        </where>
        limit #{start},#{end}
    </select>

    <select id="findCities" resultType="int" parameterType="HashMap">
        select count(*) from t_city where 1=1
        <if test="cityName != null and cityName !=''">
            and cityName like CONCAT('%',#{cityName},'%')
        </if>
        <if test="cityCode != null and cityCode !=''">
            and cityCode like CONCAT('%',#{cityCode},'%')
        </if>
    </select>

    <select id="getCities" resultType="City" parameterType="HashMap">
        select * from t_city
    </select>

</mapper>